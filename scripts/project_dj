#!/usr/bin/env python
import shutil, os, sys

from project_dj import PROJECT_DJ_ASSETS
from project_dj.util import recursive_file_gen

if __name__ == "__main__":
    
    dest_dir = os.path.dirname(sys.argv[1])
    recursive_file_gen(PROJECT_DJ_ASSETS, dest_dir)
    os.rename(os.path.join(dest_dir, "sample.gitignore"), os.path.join(dest_dir, ".gitignore"))